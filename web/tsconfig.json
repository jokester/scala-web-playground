{
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "coverage",
    "__test__",
    "bin",
    "jest.config.js",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "outDir": "build/dist",
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "target": "es6",
    "noEmit": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "isolatedModules": true,
    "strictNullChecks": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "rootDirs": [
      "src",
      "src-gen",
      "src-commonutil",
      "stories"
    ],
    "importHelpers": true
  },
  "include": [
    "src"
  ],
  "__comment": "this file must be pure json"
}
